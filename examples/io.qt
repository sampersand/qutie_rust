#[include(*Builtins, *Operators, *Plugins)]

read_url = {
  syscall('curl', __args.0) 
};

read_file = {
  syscall('cat', file)
};

HOME_DIR = syscall('sh', '-c', 'echo $HOME');

write_file = {
  syscall('sh', '-c', 'echo ' + __args.1 + ' > ' + __args.0)
};

append_file = {
  syscall('sh', '-c', 'echo ' + __args.1 + ' >> ' + __args.0)
}
